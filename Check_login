CREATE FUNCTION Check_Login(@USERNAME NVARCHAR(50), @PASS NVARCHAR(50))
RETURNS INT AS
BEGIN 
	IF EXISTS(SELECT *FROM dbo.ListUser WHERE username = @USERNAME)
	BEGIN
		IF EXISTS(SELECT *FROM dbo.ListUser WHERE username = @USERNAME AND pass = @PASS)
		  RETURN 1
		ELSE 
			RETURN -1
	END
	RETURN -2
END
